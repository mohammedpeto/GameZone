@model Game

@{
    ViewData["Title"] = "Details of a Game";
}

<div  class="card border-info rounded-4 mt-5 overflow-hidden">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between">
                <div>
                   <h1 class="text-info fw-bolder">@Model.Name</h1>
                    <span class="badge bg-info fs-5 mb-4">@Model.Category.Name</span>
                    <p class="fs-5">@Model.Description</p>
                </div>
                <div>
                    @foreach (var item in Model.GameDevices)
                    {
                        <i class="@item.Device.Icon me-2 fs-2 table-secondary"></i>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <img src="~/assests/images/games/@Model.Cover" alt="@Model.Name" class="w-100"/>
            </div>
        </div>
    </div>
</div>